	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"/> 
<div style="margin-left: 500px;"><h1>Employee Details</h1>
</div>
<div> 
<pre style="margin-left: 60px; margin-top: 90px;">
<h3>Personal Information</h3>
<div >
<div><b>First Name      :</b><%= @employee.first_name %></div>
<div><strong>Middle Name     :</strong><%= @employee.middle_name.present? ? @employee.middle_name : "N/A" %></div>
<div><strong>Last Name       :</strong><%= @employee.last_name %></div>
<div><strong>Personal Mail   :</strong><%= @employee.personal_email %></div>
<div><strong>City            :</strong><%= @employee.city %></div>
<div><strong>State           :</strong><%= @employee.state %></div>
<div><strong>Country         :</strong><%= @employee.country %></div>
<div><strong>Pincode         :</strong><%= @employee.pincode %></div>
<div><strong>Address_1       :</strong><%= @employee.address_1 %></div>
<div><strong>Address_2       :</strong><%= @employee.address_2.present? ? @employee.address_2 : "N/A" %></div>
</div>
<%= link_to "Edit",edit_employee_path, class: "btn btn-warning btn "  %>       <%=link_to "Back To Employees",employees_path ,class: "btn btn-primary"  %>
</pre>
</div>


</body>